{
    "title": "Basic Registration Form",
    "groups": [
        {
            "id": "personalInfo",
            "label": "Personal Information",
            "fields": [
                {
                    "id": "name",
                    "type": "text",
                    "label": "Full Name"
                },
                {
                    "id": "bio",
                    "type": "textarea",
                    "label": "Short Bio"
                }
            ]
        },
        {
            "id": "account",
            "label": "Account Details",
            "fields": [
                {
                    "id": "role",
                    "type": "dropdown",
                    "label": "Role",
                    "options": [
                        "Admin",
                        "Editor",
                        "Viewer"
                    ]
                },
                {
                    "id": "newsletter",
                    "type": "checkbox",
                    "label": "Subscribe to newsletter"
                },
                {
                    "id": "accountType",
                    "type": "radio",
                    "label": "Account Type",
                    "options": [
                        "Individual",
                        "Business"
                    ]
                }
            ]
        }
    ]
}